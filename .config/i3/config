# window select
bindsym $mod+Shift+Print exec maim -u -st 9999999 -B "/home/ahsan/Pictures/temp.png" && \
          xclip -sel clip -t image/png "/home/ahsan/Pictures/temp.png"               && \
          mv "/home/ahsan/Pictures/temp.png"                                            \
          "/home/ahsan/Pictures/Screenshots/$(date +%s).png"
# full monitor
bindsym $mod+Print --release exec maim -u -m 7 "/home/ahsan/Pictures/temp.png"       && \
          xclip -sel clip -t image/png "/home/ahsan/Pictures/temp.png"               && \
          mv "/home/ahsan/Pictures/temp.png"                                            \
          "/home/ahsan/Pictures/Screenshots/$(date +%s).png"
