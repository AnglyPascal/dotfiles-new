# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit sway?.' -B 'Yes, exit sway' 'swaymsg exit'


############################
# Bootup related shortcuts #
############################

# Set shut down, restart and locking features
set $mode_system  (l)ock, (e)xit, (Shift+s)uspend, (r)eboot, (s)hutdown
bindsym Ctrl+Shift+0 mode "$mode_system" 
mode "$mode_system" {
    bindsym l       exec $HOME/.config/swaylock/lock.sh 50, mode "default"
    bindsym e       exec sway exit,   mode "default"
    bindsym r       exec reboot,   mode "default"
    bindsym s       exec shutdown now, mode "default"
    bindsym Shift+s exec systemctl suspend,  mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

